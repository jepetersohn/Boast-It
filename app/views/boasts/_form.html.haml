= simple_form_for @boast, html: { multipart: true} do |f|
  - if @boast.errors.any?
    #errors
      %h2
      = pluralize(@boast.errors.count, "error")
      prevented this Boast from saving
      %ul
        - @boast.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.input :image, input_html: { class: 'form-control' }
  .form-group
    = f.input :title, input_html: { class: 'form-control' }
  .form-group
    = f.input :category, input_html: { class: 'form-control' }
  .form-group
    = f.input :description, input_html: { class: 'form-control' }
  = f.button :submit, class: "btn btn-primary"